<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_route_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Route Option 1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_legs_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 legs"
                android:textSize="12sp"
                android:textColor="@color/on_surface_variant"
                android:background="@drawable/badge_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Fare:"
                android:textSize="14sp"
                android:textColor="@color/on_surface_variant" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_total_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="à§³650.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Duration:"
                android:textSize="14sp"
                android:textColor="@color/on_surface_variant" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_total_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7h 30m"
                android:textSize="14sp"
                android:textColor="@color/on_surface" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journey"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/legs_summary_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_plan"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Save as Plan"
            android:textSize="14sp"
            style="@style/Widget.Material3.Button.TonalButton"
            app:cornerRadius="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
